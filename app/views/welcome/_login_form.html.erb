<div class="login-modal-style">
  <a href=""><%= image_tag('/images/General/fb_button.png', class: "facebook-login-link") %></a>
  <div class="login-divider"></div>
  <span class="login-divider-word">or</span>
  <div class="login-divider"></div>

  <div class="login-form">
    <%= form_tag login_path, id: "login-form" do |f| %>
      <%= text_field_tag :email, nil, { placeholder: "Email", class: "radius" } %><br>
      <%= password_field_tag :password, nil, { placeholder: "Password", class: "radius" } %>
      <a href="" class="modal-login-submit submit-login">Log in with email</a>
    <% end %>
  </div>

  <div class="login-bottom-separator"></div>

  <p class="login-modal-bottom"><i>Not a member? <a href="" data-reveal-id="inquiryModal"><span class="orange-text">Request an invite.</span></a></i></p>
</div>